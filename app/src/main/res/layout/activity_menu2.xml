<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cosmeticos"
    tools:context=".Menu2Activity">


    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn1"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/base"
            android:textColor="#000" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="300dp"

            android:background="@drawable/esmalte"
            android:onClick="ClickEsmalte"
            android:textColor="#000" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/delineador"
            android:textColor="#000" />


        <Button
            android:id="@+id/btn4"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/lipstick"
            android:textColor="#000" />


        <Button
            android:id="@+id/btn5"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/rimel"
            android:textColor="#000" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/sobras"
            android:textColor="#000" />


        <Button
            android:id="@+id/btn7"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rubor"
            android:textColor="#000" />



    </LinearLayout>


</HorizontalScrollView>